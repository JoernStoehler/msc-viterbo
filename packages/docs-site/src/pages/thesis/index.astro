---
import Layout from '../../layouts/SiteLayout.astro';
import { getAllThesisEntries } from '../../lib/thesis';

const entries = getAllThesisEntries();
---
<Layout title="Thesis Chapters">
  <h1>Thesis Draft</h1>
  <p>
    These chapters are rendered directly from the MDX sources inside <code>packages/thesis/src</code>.
    Interactive figures are hydrated as Astro/React islands while the print workflow keeps using the
    static PNG/SVG siblings.
  </p>
  <ul class="thesis-list">
    {entries.map((entry) => (
      <li>
        <a href={/thesis/ + entry.slug}>
          <h2>{entry.title}</h2>
        </a>
        {entry.summary && <p>{entry.summary}</p>}
      </li>
    ))}
  </ul>
</Layout>
